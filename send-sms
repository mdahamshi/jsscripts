#!/usr/bin/env nodejs


var PushBullet = require('pushbullet');
var fs = require('fs');
var mmdConstants = require('/data/aes/constants').pushCons;
var pusher = new PushBullet(mmdConstants.pushKey);
// pusher.devices(function(err, res){
